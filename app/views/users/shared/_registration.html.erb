<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="access_social">
    <!-- <%= link_to 'Регистрация через Facebook', '/users/auth/facebook?type=users', class: 'social_bt facebook' %> -->
    <%= link_to 'Регистрация через Vkontakte', '/users/auth/vkontakte?type=users', class: 'social_bt vkontakte' %>
    <%= link_to 'Регистрация через Google', '/users/auth/google_oauth2?type=users', class: 'social_bt google' %>
  </div>
  <div class="divider">
    <span>или</span>
  </div>

  <div class="form-group">
    <label>Ваш Email</label>
    <%= f.email_field(:email, autofocus: true, class: 'form-control') %>
    <i class="icon_mail_alt"></i>
  </div>

  <div class="form-group">
    <label>Пароль</label>
    <%= f.password_field(:password, autocomplete: "off", class: 'form-control', id: 'password1') %>
    <i class="icon_lock_alt"></i>
  </div>

  <div class="form-group">
    <label>Подтвердить пароль</label>
    <%= f.password_field(:password_confirmation, autocomplete: "off", class: 'form-control') %>
    <i class="icon_lock_alt"></i>
  </div>

  <div id="pass-info" class="clearfix"></div>
  <%= f.submit('Зарегистрироваться!', class: 'btn_1 rounded full-width add_top_30') %>

  <div class="text-center add_top_10">
    Уже есть аккаунт? <strong><%= link_to 'Войти', new_user_session_path %></strong>
  </div>
<% end %>