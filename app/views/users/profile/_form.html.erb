<%= form_with model: current_user.base_object, url: users_profile_path, method: :put, class: 'remote edit-profile' do |f| %>
  <div class="box_general padding_bottom">
    <div class="header_box version_2">
      <h2><%= I18n.t "users.profile.main_info" %></h2>
      <%= f.submit (I18n.t "all_pages.labels.update"), class: "btn_1 small pull-right" %>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="tabs">
          <ul>
            <% if @current_locale == :en %>
              <li>EN</li>
              <li>RU</li>
            <% else %>
              <li>RU</li>
              <li>EN</li>
            <% end %>
          </ul>
          <div>
            <% if @current_locale == :en %>
              <div class="form-group">
                <label><%= I18n.t "models.user.name_en" %></label>
                <%= f.text_field :name_en, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.name_en_placeholder'), rows: 4 %>
              </div>
              <div class="form-group">
                <label><%= I18n.t "models.user.name_ru" %></label>
                <%= f.text_field :name_ru, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.name_ru_placeholder'), rows: 4 %>
              </div>
            <% else %>
              <div class="form-group">
                <label><%= I18n.t "models.user.name_ru" %></label>
                <%= f.text_field :name_ru, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.name_ru_placeholder'), rows: 4 %>
              </div>
              <div class="form-group">
                <label><%= I18n.t "models.user.name_en" %></label>
                <%= f.text_field :name_en, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.name_en_placeholder'), rows: 4 %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="tabs">
          <ul>
            <% if @current_locale == :en %>
              <li>EN</li>
              <li>RU</li>
            <% else %>
              <li>RU</li>
              <li>EN</li>
            <% end %>
          </ul>
          <div>
            <% if @current_locale == :en %>
              <div class="form-group">
                <label><%= I18n.t "models.user.surname_en" %></label>
                <%= f.text_field :surname_en, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.surname_en_placeholder'), rows: 4 %>
              </div>
              <div class="form-group">
                <label><%= I18n.t "models.user.surname_ru" %></label>
                <%= f.text_field :surname_ru, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.surname_ru_placeholder'), rows: 4 %>
              </div>
            <% else %>
              <div class="form-group">
                <label><%= I18n.t "models.user.surname_ru" %></label>
                <%= f.text_field :surname_ru, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.surname_ru_placeholder'), rows: 4 %>
              </div>
              <div class="form-group">
                <label><%= I18n.t "models.user.surname_en" %></label>
                <%= f.text_field :surname_en, class: "form-control p-bottom16",
                                 placeholder: (I18n.t 'models.user.name_en_placeholder'), rows: 4 %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-3 m-top30">
        <div class="form-group">
          <label><%= I18n.t "models.user.main_language" %></label>
          <%= f.select :main_language_id, current_user.languages_for_select,
                       { include_blank: (I18n.t 'all_pages.labels.no_selected') },
                       { class: 'selectize-one-option' } %>
        </div>
      </div>

      <div class="col-md-3">
        <div class="form-group">
          <% if current_user.base_object.avatar.to_s.size > 3 %>
            <%= image_tag current_user.base_object.avatar.page_edit.to_s, class: "main_avatar" %>
          <% else %>
            <%= image_tag "noimage/main.png", class: "main_avatar" %>
          <% end %>
          <%= f.file_field :avatar, class: "btn_1 gray small pull-left" %>
        </div>
        <small class="pull-left">800px * 530px</small>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="tabs">
          <ul>
            <% if @current_locale == :en %>
              <li>EN</li>
              <li>RU</li>
            <% else %>
              <li>RU</li>
              <li>EN</li>
            <% end %>
          </ul>
          <div>
            <% if @current_locale == :en %>
              <div class="form-group">
                <label><%= I18n.t "models.user.description_en" %></label>
                <%= f.text_area :description_en, class: "form-control p-bottom16",
                                placeholder: (I18n.t 'models.user.description_en_placeholder'), rows: 4 %>
              </div>
              <div class="form-group">
                <label><%= I18n.t "models.user.description_ru" %></label>
                <%= f.text_area :description_ru, class: "form-control p-bottom16",
                                placeholder: (I18n.t 'models.user.description_ru_placeholder'), rows: 4 %>
              </div>
            <% else %>
              <div class="form-group">
                <label><%= I18n.t "models.user.description_ru" %></label>
                <%= f.text_area :description_ru, class: "form-control p-bottom16",
                                placeholder: (I18n.t 'models.user.description_ru_placeholder'), rows: 4 %>
              </div>
              <div class="form-group">
                <label><%= I18n.t "models.user.description_en" %></label>
                <%= f.text_area :description_en, class: "form-control p-bottom16",
                                placeholder: (I18n.t 'models.user.description_en_placeholder'), rows: 4 %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.user.main_phone" %></label>
          <%= f.text_field :main_phone, class: "form-control p-bottom16",
                           placeholder: (I18n.t 'models.user.main_phone'), rows: 4 %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.user.additional_phone" %></label>
          <%= f.text_field :additional_phone, class: "form-control p-bottom16",
                           placeholder: (I18n.t 'models.user.additional_phone'), rows: 4 %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.user.email" %></label>
          <%= f.text_field :contact_email, class: "form-control p-bottom16",
                           placeholder: (I18n.t 'models.user.email'), rows: 4 %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.user.vk_link" %></label>
          <%= f.text_field :vk_link, class: "form-control p-bottom16",
                           placeholder: (I18n.t 'models.user.vk_link_placeholder'), rows: 4 %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.user.instagram_link" %></label>
          <%= f.text_field :instagram_link, class: "form-control p-bottom16",
                           placeholder: (I18n.t 'models.user.instagram_link_placeholder'), rows: 4 %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.user.facebook_link" %></label>
          <%= f.text_field :facebook_link, class: "form-control p-bottom16",
                           placeholder: (I18n.t 'models.user.facebook_link_placeholder'), rows: 4 %>
        </div>
      </div>
    </div>
  </div>

  <div class="box_general padding_bottom">
    <div class="header_box version_2">
      <h2><%= I18n.t "users.profile.coordinates" %></h2>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label><%= I18n.t "models.tour.country" %></label>
          <%= f.select :country_id, current_user.countries_for_select,
                       { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                       { class: 'selectize-one-option' } %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group" id="region_select_area">
          <label><%= I18n.t "models.tour.region" %></label>
          <%= f.select :region_id, current_user.regions_for_select, { include_blank: (I18n.t 'all_pages.labels.no_selected') },
                       { class: 'selectize-one-option' } %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group" id="city_select_area">
          <label><%= I18n.t "models.tour.city" %></label>
          <%= f.select :city_id, current_user.cities_for_select, { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                       { class: 'selectize-one-option' } %>
        </div>
      </div>
    </div>
  </div>
<% end %>