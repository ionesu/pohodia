<%= form_with model: current_user.base_object, url: users_reset_password_path(format: :json),
              method: :put, class: 'col-md-6 remote' do |f| %>
  <div class="box_general padding_bottom">
    <div class="header_box version_2">
      <h2><%= I18n.t "users.profile.change_password" %></h2>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label><%= I18n.t "models.user.new_password" %></label>
          <%= f.password_field :password, autocomplete: "off",
                               placeholder: (I18n.t 'models.user.new_password_placeholder'),
                               class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label><%= I18n.t "models.user.confirm_password" %></label>
          <%= f.password_field :password_confirmation, autocomplete: "off",
                               placeholder: (I18n.t 'models.user.confirm_password_placeholder'),
                               class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.submit (I18n.t "all_pages.labels.update"), class: "btn_1 small pull-left" %>
        </div>
      </div>
    </div>
  </div>
<% end %>