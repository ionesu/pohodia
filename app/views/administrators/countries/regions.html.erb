<% provide(:body_class, 'countries-regions') %>

<div class="container-fluid">
  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/administrators/dashboard">Консоль</a>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Страны", administrators_countries_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @country.title_ru, edit_administrators_country_path(@country) %>
    </li>
    <li class="breadcrumb-item active">Регионы</li>
  </ol>
  <div class="card mb-3">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
          <tr>
            <th >Названия</th>
            <th >Алиасы</th>
            <th >Зависимости</th>
            <th style="width: 20%">Ссылки</th>
          </tr>
          </thead>
          <tfoot>
          <tr>
            <th>Названия</th>
            <th>Алиасы</th>
            <th>Зависимости</th>
            <th style="width: 20%">Ссылки</th>
          </tr>
          </tfoot>
          <tbody>
          <% @regions.each do |region| %>
            <tr>
              <td>
                ru: <%= link_to region.title_ru, edit_administrators_region_path(region) %><br/>
                en: <%= link_to region.title_en, edit_administrators_region_path(region) %>
              </td>
              <td>
                ru: <%= region.slug_ru ? region.slug_ru : region.id %><br/>
                en: <%= region.slug_en ? region.slug_en : region.id %>
              </td>
              <td>
                <%= link_to "Города", cities_administrators_region_path(region), target: "_blank" %><br/>
                <%= link_to "SEO страницы", seo_data_items_administrators_region_path(region), target: "_blank" %>
              </td>
              <td>
                <%= link_to "Редактировать", edit_administrators_region_path(region) %> |
                <%= link_to "Просмотр", region_path(region), target: "_blank" %><br/>
                <%= link_to "Удалить", '#', target: "_blank" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>