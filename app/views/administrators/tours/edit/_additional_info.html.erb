<div class="box_general padding_bottom">
  <div class="header_box version_2">
    <h2>Дополнительная информация</h2>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4">
          <h6>Что входит в стоимость</h6>
          <%= form_with model: @tour, url: add_included_in_price_option_administrators_tour_path, local: true, method: :post do |f| %>
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <%= f.text_field :option, class: "form-control", placeholder: "Опция" %>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <%= f.submit "Добавить".html_safe, class: "btn_1 gray add-in-list-item" %>
                </div>
              </div>
            </div>
          <% end %>
          <ul class="list-unstyled">
            <% @tour_facade.options_included_in_price.each do |option| %>
              <li><%= option %>
                <%= link_to remove_included_in_price_option_administrators_tour_path(@tour, option: option), method: :post do
                  "<i class=\"fa fa-fw fa-remove\"></i>".html_safe
                end %></li>
            <% end %>
          </ul>
          <p style="margin-bottom: 10px" class="font-weight-bold"><%= 'Удаленные элементы' if @tour_facade.options_included_in_price_deleted.try(:size).to_i > 0 %></p>
          <ul class="list-unstyled">
            <% if @tour_facade.options_included_in_price_deleted.present? %>
              <% @tour_facade.options_included_in_price_deleted.each do |option| %>
                <li><%= option %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
        
        <div class="col-md-4">
          <h6>Что не входит в стоимость</h6>
          <%= form_with model: @tour, url: add_not_included_in_price_option_administrators_tour_path, local: true, method: :post do |f| %>
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <%= f.text_field :option, class: "form-control", placeholder: "Опция" %>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <%= f.submit "Добавить".html_safe, class: "btn_1 gray add-in-list-item" %>
                </div>
              </div>
            </div>
          <% end %>
          <ul class="list-unstyled">
            <% @tour_facade.options_not_included_in_price.each do |option| %>
              <li><%= option %>
                <%= link_to remove_not_included_in_price_option_administrators_tour_path(@tour, option: option), method: :post do
                  "<i class=\"fa fa-fw fa-remove\"></i>".html_safe
                end %></li>
            <% end %>
          </ul>
          <p style="margin-bottom: 10px" class="font-weight-bold"><%= 'Удаленные элементы' if @tour_facade.options_not_included_in_price_deleted.try(:size).to_i > 0 %></p>
          <ul class="list-unstyled">
            <% if @tour_facade.options_not_included_in_price_deleted.present? %>
              <% @tour_facade.options_not_included_in_price_deleted.each do |option| %>
                <li><%= option %></li>
              <% end %>
            <% end %>
          </ul>
        </div>

        <div class="col-md-4">
          <h6>Необходимое снаряжение</h6>
          <%= form_with model: @tour, url: add_equipment_administrators_tour_path, local: true, method: :post do |f| %>
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <%= f.text_field :option, class: "form-control", placeholder: "Опция" %>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <%= f.submit "Добавить".html_safe, class: "btn_1 gray add-in-list-item" %>
                </div>
              </div>
            </div>
          <% end %>
          <ul class="list-unstyled">
            <% @tour_facade.options_equipment.each do |option| %>
              <li><%= option %>
                <%= link_to remove_equipment_administrators_tour_path(@tour, option: option), method: :post do
                  "<i class=\"fa fa-fw fa-remove\"></i>".html_safe
                end %></li>
            <% end %>
          </ul>
          <p style="margin-bottom: 10px" class="font-weight-bold"><%= 'Удаленные элементы' if @tour_facade.options_equipment_deleted.try(:size).to_i > 0 %></p>
          <ul class="list-unstyled">
            <% if @tour_facade.options_equipment_deleted.present? %>
              <% @tour_facade.options_equipment_deleted.each do |option| %>
                <li><%= option %></li>
              <% end %>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>