<% provide(:body_class, 'posts-edit') %>
<div class="container-fluid">
  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/administrators/dashboard">Консоль</a>
    </li>
    <li class="breadcrumb-item">
      <a href="/administrators/post_categories">Записи</a>
    </li>
    <li class="breadcrumb-item active">Новая запись</li>
  </ol>

  <%= form_with model: @post, url: administrators_posts_path, local: true do |f| %>
    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2>Основная информация</h2>
        <%= f.submit "Сохранить", class: "btn_1 small pull-right" %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Название (ru)</label>
            <%= f.text_field :title_ru, class: "form-control", placeholder: "Название записи" %>
          </div>

          <div class="form-group">
            <label>ЧПУ (ru)</label>
            <%= f.text_field :slug_ru, class: "form-control", placeholder: "url" %>
          </div>

          <div class="form-group">
            <label>Описание (ru)</label>
            <%= f.text_area :description_ru, class: "form-control tinymce", placeholder: "Описание", rows: 15 %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Название (en)</label>
            <%= f.text_field :title_en, class: "form-control", placeholder: "Название записи" %>
          </div>

          <div class="form-group">
            <label>ЧПУ (en)</label>
            <%= f.text_field :slug_en, class: "form-control", placeholder: "url" %>
          </div>

          <div class="form-group">
            <label>Описание (en)</label>
            <%= f.text_area :description_en, class: "form-control tinymce", placeholder: "Описание", rows: 15 %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Лид (ru)</label>
            <%= f.text_area :lead_ru, class: "form-control tinymce", placeholder: "Лид", rows: 10 %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Лид (en)</label>
            <%= f.text_area :lead_en, class: "form-control tinymce", placeholder: "Лид", rows: 10 %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Категория записи</label>
            <%= f.select :post_category_id, @post_categories,{include_blank: 'Не выбрана'},
                         {class: 'selectize-one-option'} %>
          </div>
        </div>

      </div>
    </div>
    </div>

    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2>Изображения</h2>
      </div>
      <div class="row">
        <div class="col-md-4">
          <h6>Основное изображение</h6>
          <small><%= ContentImage.version_page_list %></small>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <% if @post.avatar.to_s.size > 3 %>
                  <%= image_tag @post.avatar.page_edit.to_s, class: "main_avatar" %>
                <% else %>
                  <%= image_tag "noimage/main.png", class: "main_avatar" %>
                <% end %>
              </div>
            </div>
          </div>
          <%= f.file_field :avatar %>
        </div>
        <div class="col-md-6">
          <h6>Широкое изображение</h6>
          <small><%= ContentImage.version_page_show %></small>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <% if @post.large_avatar.to_s.size > 3 %>
                  <%= image_tag @post.large_avatar.page_edit.to_s, class: "large_avatar" %>
                <% else %>
                  <%= image_tag "noimage/main.png", class: "large_avatar" %>
                <% end %>
              </div>
            </div>
          </div>
          <%= f.file_field :large_avatar %>
        </div>
      </div>
      <!-- /row-->
    </div>

    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2>SEO</h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Meta title (ru)</label>
            <%= f.text_field :meta_title_ru, class: "form-control", placeholder: "meta title" %>
          </div>
          <div class="form-group">
            <label>Meta description (ru)</label>
            <%= f.text_area :meta_description_ru, class: "form-control", placeholder: "meta description" %>
          </div>
          <div class="form-group">
            <label>Meta keywords (ru)</label>
            <%= f.text_area :meta_keywords_ru, class: "form-control", placeholder: "meta keywords" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Meta title (en)</label>
            <%= f.text_field :meta_title_en, class: "form-control", placeholder: "meta title" %>
          </div>
          <div class="form-group">
            <label>Meta description (en)</label>
            <%= f.text_area :meta_description_en, class: "form-control", placeholder: "meta description" %>
          </div>
          <div class="form-group">
            <label>Meta keywords (en)</label>
            <%= f.text_area :meta_keywords_en, class: "form-control", placeholder: "meta keywords" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="buttons_container">
    <ul>
      <li><%= link_to "Назад", administrators_posts_path, class: 'btn_1 gray small' %></li>
    </ul>
  </div>