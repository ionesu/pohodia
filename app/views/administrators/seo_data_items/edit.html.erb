<% provide(:body_class, 'seo_data_item-edit') %>

<div class="container-fluid">

  <%= render 'administrators/seo_data_items/edit/breadcrumbs' %>

  <%= form_with model: @page, url: administrators_seo_data_item_path, local: true do |f| %>
    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2>Основная информация</h2>
        <%= f.submit "Обновить", class: "btn_1 small pull-right" %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Текст вверху страницы (ru)</label>
            <%= f.text_area :text_above_ru, class: "form-control tinymce", placeholder: "Текст вверху страницы", rows: 5 %>
          </div>
          <div class="form-group">
            <label>Текст внизу страницы (ru)</label>
            <%= f.text_area :text_below_ru, class: "form-control tinymce", placeholder: "Текст внизу страницы", rows: 5 %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label>Текст вверху страницы (en)</label>
            <%= f.text_area :text_above_en, class: "form-control tinymce", placeholder: "Текст вверху страницы", rows: 5 %>
          </div>
          <div class="form-group">
            <label>Текст внизу страницы (en)</label>
            <%= f.text_area :text_below_en, class: "form-control tinymce", placeholder: "Текст внизу страницы", rows: 5 %>
          </div>
        </div>

      </div>
    </div>

    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2></i>Изображения</h2>
      </div>
      <div class="row">
        <div class="col-md-4">
          <h6>Основное изображение</h6>
          <small>203px * 130px</small>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <% if @page.image.to_s.size > 3 %>
                  <%= image_tag @page.image.page_edit.to_s, class: "main_avatar" %>
                <% else %>
                  <%= image_tag "noimage/main.png", class: "main_avatar" %>
                <% end %>
              </div>
            </div>
          </div>
          <%= f.file_field :image %>
        </div>
        <div class="col-md-6">
          <h6>Широкое изображение</h6>
          <small>603px * 130px</small>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <% if @page.large_image.to_s.size > 3 %>
                  <%= image_tag @page.large_image.page_edit.to_s, class: "large_avatar" %>
                <% else %>
                  <%= image_tag "noimage/main.png", class: "large_avatar" %>
                <% end %>
              </div>
            </div>
          </div>
          <%= f.file_field :large_image %>
        </div>
      </div>
    </div>

    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2>SEO</h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Meta title (ru)</label>
            <%= f.text_field :meta_title_ru, class: "form-control", placeholder: "meta title" %>
          </div>
          <div class="form-group">
            <label>Meta description (ru)</label>
            <%= f.text_area :meta_description_ru, class: "form-control", placeholder: "meta description" %>
          </div>
          <div class="form-group">
            <label>Meta keywords (ru)</label>
            <%= f.text_area :meta_keywords_ru, class: "form-control", placeholder: "meta keywords" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Meta title (en)</label>
            <%= f.text_field :meta_title_en, class: "form-control", placeholder: "meta title" %>
          </div>
          <div class="form-group">
            <label>Meta description (en)</label>
            <%= f.text_area :meta_description_en, class: "form-control", placeholder: "meta description" %>
          </div>
          <div class="form-group">
            <label>Meta keywords (en)</label>
            <%= f.text_area :meta_keywords_en, class: "form-control", placeholder: "meta keywords" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="buttons_container">
    <ul>
      <li><%= link_to "Назад", :back, class: 'btn_1 gray small' %></li>
    </ul>
  </div>
</div>