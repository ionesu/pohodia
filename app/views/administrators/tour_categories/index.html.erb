<% provide(:body_class, 'tour_types-tour_categories') %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/administrators/dashboard">Консоль</a>
    </li>
    <li class="breadcrumb-item active">Категории туров</li>
  </ol>
  <div class="card mb-3">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
          <tr>
            <th >Названия</th>
            <th >Алиасы</th>
            <th >Тип категории</th>
            <th style="width: 20%">Ссылки</th>
          </tr>
          </thead>
          <tfoot>
          <tr>
            <th>Названия</th>
            <th>Алиасы</th>
            <th>Тип категории</th>
            <th style="width: 20%">Ссылки</th>
          </tr>
          </tfoot>
          <tbody>
          <% @tour_categories.each do |tour_category| %>
            <tr>
              <td>
                ru: <%= link_to tour_category.title_ru, edit_administrators_tour_category_path(tour_category) %><br/>
                en: <%= link_to tour_category.title_en, edit_administrators_tour_category_path(tour_category) %>
              </td>
              <td>
                ru: <%= tour_category.slug_ru ? tour_category.slug_ru : tour_category.id %><br/>
                en: <%= tour_category.slug_en ? tour_category.slug_en : tour_category.id %>
              </td>
              <td>
                ru: <%= link_to tour_category.tour_type.title_ru, edit_administrators_tour_type_path(tour_category.tour_type) %><br/>
                en: <%= link_to tour_category.tour_type.title_en, edit_administrators_tour_type_path(tour_category.tour_type) %><br/>

              </td>
              <td>
                <%= link_to "Редактировать", edit_administrators_tour_category_path(tour_category) %> |
                <%= link_to "Просмотр", tour_category_path(tour_category), target: "_blank" %><br/>
                <%= link_to "SEO страницы", seo_data_items_administrators_tour_category_path(tour_category), target: "_blank" %> |
                <%= link_to "Удалить", '#', target: "_blank" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="buttons_container">
    <ul>
      <li><%= link_to "Добавить", new_administrators_tour_category_path, class: 'btn_1 red small' %></li>
    </ul>
  </div>
</div>