<% provide(:body_class, 'profile-edit') %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to I18n.t 'users.breadcrumbs.dashboard', guide_root_path %></li>
    <li class="breadcrumb-item active"><%= t('users.breadcrumbs.reset_password') %></li>
  </ol>

  <div class="row">
    <%= form_with model: @current_guide, url: guides_reset_password_path(format: :json),
                  method: :put, class: 'col-md-6 remote' do |f| %>
      <div class="box_general padding_bottom">
        <div class="header_box version_2">
          <h2><%= I18n.t "guides.profile.change_password" %></h2>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label><%= I18n.t "models.guide.new_password" %></label>
              <%= f.password_field :password, autocomplete: "off",
                                   placeholder: (I18n.t 'models.guide.new_password_placeholder'),
                                   class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label><%= I18n.t "models.guide.confirm_password" %></label>
              <%= f.password_field :password_confirmation, autocomplete: "off",
                                   placeholder: (I18n.t 'models.guide.confirm_password_placeholder'),
                                   class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.submit (I18n.t "all_pages.labels.update"), class: "btn_1 small pull-left" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="buttons_container">
    <ul>
      <li><%= link_to (I18n.t "all_pages.labels.back"), guide_root_path, class: 'btn_1 gray small' %></li>
    </ul>
  </div>
</div>