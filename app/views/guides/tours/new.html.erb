<% provide(:body_class, 'tours-new') %>
<div class="container-fluid">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/guides/dashboard"><%= I18n.t "guides.breadcrumbs.dashboard" %></a>
    </li>
    <li class="breadcrumb-item">
      <a href="/guides/tours"><%= I18n.t "guides.breadcrumbs.tours" %></a>
    </li>
    <li class="breadcrumb-item active"><%= I18n.t "guides.breadcrumbs.add_tour" %></li>
  </ol>

  <%= form_with model: @tour,
                url: guides_tours_path,
                local: true,
                method: :post,
                class: 'remote' do |f| %>
    <%= f.hidden_field :guide_company_id, value: @tour.guide_company_id %>

    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2><%= I18n.t "guides.tours.new.main_info" %></h2>
        <%= f.submit (I18n.t "all_pages.labels.save"), class: "btn_1 small pull-right" %>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="tabs">
            <ul>
              <% if @current_locale == :en %>
                <li>EN</li>
                <li>RU</li>
              <% else %>
                <li>RU</li>
                <li>EN</li>
              <% end %>
            </ul>
            <div>
              <% if @current_locale == :en %>
                <div class="form-group">
                  <label><%= I18n.t "models.tour.title_en" %></label>
                  <%= f.text_area :title_en, class: "form-control p-bottom16",
                                  placeholder: (I18n.t 'models.tour.title_en_placeholder'), rows: 4 %>
                </div>
                <div class="form-group">
                  <label><%= I18n.t "models.tour.title_ru" %></label>
                  <%= f.text_area :title_ru, class: "form-control p-bottom16",
                                  placeholder: (I18n.t 'models.tour.title_ru_placeholder'), rows: 4 %>
                </div>
              <% else %>
                <div class="form-group">
                  <label><%= I18n.t "models.tour.title_ru" %></label>
                  <%= f.text_area :title_ru, class: "form-control p-bottom16",
                                  placeholder: (I18n.t 'models.tour.title_ru_placeholder'), rows: 4 %>
                </div>
                <div class="form-group">
                  <label><%= I18n.t "models.tour.title_en" %></label>
                  <%= f.text_area :title_en, class: "form-control p-bottom16",
                                  placeholder: (I18n.t 'models.tour.title_en_placeholder'), rows: 4 %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row col-md-8">
          <div class="col-md-6">
            <div class="form-group" id="category_select_area">
              <label><%= I18n.t "models.tour.tour_category" %></label>
              <%= f.select :tour_category_id, tour_categories, { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') }, { class: 'selectize-one-option' } %>
            </div>

            <div class="form-group" id="category_select_area">
              <label><%= t('models.tour.many_days') %></label>
              <%= f.select :many_days, many_days, { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') }, { class: 'selectize-one-option' } %>
            </div>

            <div class="form-group">
              <label>Разрешить бронирование без опредеоенной даты?</label>
              <%= f.select :has_booking_without_date, has_booking_without_date,
                           { include_blank: (I18n.t 'all_pages.labels.no_selected') },
                           { class: 'selectize-one-option' } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="box_general padding_bottom">
      <div class="header_box version_2">
        <h2><%= I18n.t "guides.tours.new.coordinates" %></h2>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label><%= I18n.t "models.tour.country" %></label>
            <%= f.select :country_id, @countries, { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                         { class: 'selectize-one-option' } %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group" id="region_select_area">
            <label><%= I18n.t "models.tour.region" %></label>
            <%= f.select :region_id, [], { include_blank: (I18n.t 'all_pages.labels.no_selected') },
                         { class: 'selectize-one-option' } %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group" id="city_select_area">
            <label><%= I18n.t "models.tour.city" %></label>
            <%= f.select :city_id, [], { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                         { class: 'selectize-one-option' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="buttons_container">
    <ul>
      <li><%= link_to (I18n.t "all_pages.labels.back"), guides_tours_path, class: 'btn_1 gray small' %></li>
    </ul>
  </div>
</div>