<div id="sign-in-dialog" class="zoom-anim-dialog mfp-hide">
  <div class="small-dialog-header">
    <h3><%= I18n.t 'site.all_pages.labels.sign_in_user_popup' %></h3>
  </div>

  <%= form_for(:user, url: session_path(:user)) do |f| %>
    <div class="sign-in-wrapper">
      <!-- <%= link_to 'Войти через Facebook', '/users/auth/facebook?type=users&main=1', class: 'social_bt facebook' %> -->
      <%= link_to 'Войти через Vkontakte', '/users/auth/vkontakte?type=users&main=1', class: 'social_bt vkontakte' %>
      <%= link_to 'Войти через Google', '/users/auth/google_oauth2?type=users&main=1', class: 'social_bt google' %>

      <div class="divider"><span>Или</span></div>

      <div class="form-group">
        <label>Email</label>
        <%= f.email_field(:email, class: 'form-control', id: 'email') %>
        <i class="icon_mail_alt"></i>
      </div>

      <div class="form-group">
        <label>Пароль</label>
        <%= f.password_field(:password, class: 'form-control', id: 'password') %>
        <i class="icon_lock_alt"></i>
      </div>

      <div class="clearfix add_bottom_15">
        <div class="checkboxes float-left">
          <label class="container_check">Запомнить меня
            <%= f.check_box(:remember_me) %>
            <span class="checkmark"></span>
          </label>
        </div>
        <div class="float-right mt-1"><a id="forgot" href="javascript:void(0);">Забыли пароль?</a></div>
      </div>

      <%= f.hidden_field(:main, value: '1') %>

      <div class="text-center">
        <%= f.submit('Войти', class: 'btn_1 full-width') %>
      </div>

      <div class="text-center">
        У вас нет аккаунта? <%= link_to 'Зарегистрироваться', new_user_registration_path %>
      </div>

      <div id="forgot_pw">
        <div class="form-group">
          <label>Пожалуйста введите e-mail вашего аккаунта</label>
          <input type="email" class="form-control" name="email_forgot" id="email_forgot">
          <i class="icon_mail_alt"></i>
        </div>
        <p>Вы получите письмо со ссылкой на восстановление пароля.</p>
        <div class="text-center"><input type="submit" value="Сбросить пароль" class="btn_1"></div>
      </div>
    </div>
  <% end %>
</div>
