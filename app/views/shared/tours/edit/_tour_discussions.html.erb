<div class="box_general padding_bottom">
  <div class="header_box version_2">
    <h2>Статус</h2>
  </div>

  <div class="row my-3">
    <h5 class="px-3 my-1"><%= tour.confirmed_present %></h5>
  </div>

  <% if tour.tour_discussions.present? && !tour.confirmed? %>
    <div class="row pl-3">
      <div class="header_box">
        <h2>Замечания</h2>
      </div>

      <% tour.tour_discussions.each do |tour_discussion| %>
        <div class="card mb-3 w-100">
          <div class="card-body">
            <div class="mb-3">
              <%= tour_discussion.text %>
            </div>

            <% if tour_discussion.confirmed %>
              <div class="btn_1 gray">На провекре</div>
            <% else %>
              <%= link_to 'Отправить на проверку',
                          guides_tour_tour_discussion_path(tour_id: tour, id: tour_discussion, tour_discussion: { confirmed: true}),
                          method: :put, class: 'btn_1' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>