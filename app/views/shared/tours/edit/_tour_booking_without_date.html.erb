<div class="box_general padding_bottom">
  <div class="header_box version_2">
    <h2>Бронирование без определенной даты</h2>
  </div>
  <%= form_with model: tour, url: url, class: 'remote' do |f| %>
    <div class="row">
      <div class="col-md-4">
        <label>Разрешить бронирование без опредеоенной даты?</label>
        <%= f.select :has_booking_without_date, has_booking_without_date,
                     { include_blank: (I18n.t 'all_pages.labels.no_selected') },
                     { class: 'selectize-one-option' } %>
      </div>

      <div class="col-md-12">
      </div>

      <div class="col-md-4">
        <label for="inputDate">Цена</label>
        <%= f.text_field :price, class: "form-control", placeholder: (I18n.t "models.tour_price_item.price_placeholder") %>
      </div>

      <div class="col-md-4">
        <%= label_tag(:currency, 'Валюта') %>
        <%= f.select :currency, TourPriceItem::CURRENCIES, { include_blank: (I18n.t 'all_pages.labels.no_selected') }, { class: 'selectize-one-option' } %>
      </div>

      <div class="col-md-12">
      </div>

      <div class="col-md-2">
        <div class="form-group m-top17">
          <%= f.submit 'Обновить', class: "btn_1 gray m-top15" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
