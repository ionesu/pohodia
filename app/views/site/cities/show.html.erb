<section class="hero_in tours_detail wrapper-avatar" xmlns="http://www.w3.org/1999/html">
<%= image_tag 'hero_in_tours_detail.jpg', class: 'wrapper-large-avatar' %>


  <h1 class="hero-title">
    <%= get_value_of_smart_field(@city.base_object, 'title', @current_locale) %>
  </h1>
</section>
		   
<div class="filters_listing sticky_horizontal wrapper-avatar-breadrumbs">
  <div class="container">
    <ul class="clearfix">
      <li class="links-list">
        <%= link_to (I18n.t 'site.all_pages.labels.main_page'), '/' %> /
        <%= link_to (I18n.t 'site.all_pages.labels.all_countries'), '/countries' %> /
        <%= link_to get_value_of_smart_field(@country, 'title', @current_locale), country_path(@country) %> /
        <%= link_to get_value_of_smart_field(@region, 'title', @current_locale), region_path(@region) %> /
        <%= link_to get_value_of_smart_field(@city.base_object, 'title', @current_locale),
                    city_path(@city.base_object) %>
      </li>
      <li>
        <a class="btn_map popup-content" href="#text-popup"><%= I18n.t 'all_pages.labels.show_in_map' %></a>
      </li>
    </ul>
  </div>
</div>		   
<div class="container margin_60_35">
  <div class="row">
    <%= render 'site/shared/filter/country_category' %>

    <div class="col-lg-9" id="list_sidebar">
      <div class="isotope-wrapper">
        <% if @tours.size > 0 %>
          <% @tours.each do |tour| %>
            <%= render 'site/shared/tour', tour: tour %>
          <% end %>
        <% else %>
          <p class="bold center text-uppercase"><%= I18n.t 'all_pages.labels.no_records' %></p>
        <% end %>
      </div>

      <%= will_paginate @tours, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>