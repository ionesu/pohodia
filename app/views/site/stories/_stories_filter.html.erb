<aside class="col-lg-3" id="sidebar">
  <div id="filters_col">
    <%= form_with model: @story_filter, url: stories_path, method: :get, local: true do |f| %>
      <a data-toggle="collapse" href="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters" id="filters_col_bt">Фильтр</a>
      <div class="filter_type">
        <h6><%= t('tour_filter.coutry') %></h6>

        <div class="row">
          <div class="col-lg-12">
            <%= f.select :country_id, countries,
                         { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                         { id: 'country_id', class: 'selectize-one-option', disabled: @country_selected } %>
          </div>
        </div>
      </div>

      <div class="filter_type">
        <h6><%= t('tour_filter.region') %></h6>
        <div class="row">
          <div class="col-lg-12" id="region_select_area">
            <%= f.select :region_id, regions(@story_filter.country_id),
                         { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                         { class: 'selectize-one-option', disabled: @region_selected } %>
          </div>
        </div>
      </div>

      <div class="filter_type">
        <h6><%= t('tour_filter.city') %></h6>
        <div class="row">
          <div class="col-lg-12" id="city_select_area">
            <%= f.select :city_id, cities(region_id: @story_filter.region_id, country_id: @story_filter.country_id),
                         { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                         { class: 'selectize-one-option', disabled: @city_selected } %>
          </div>
        </div>
      </div>

      <div class="filter_type">
        <h6><%= t('tour_filter.category_tour') %></h6>
        <div class="row">
          <div class="col-lg-12">
            <%= f.select :type_activity_id, tour_categories,
                         { include_blank: (I18n.t 'all_pages.labels.no_selected_v2') },
                         { class: 'selectize-one-option', disabled: @activity_selected } %>
          </div>
        </div>
      </div>

      <div class="my-3">
        <%= f.submit 'Найти', class: 'btn_1' %>
      </div>
    <% end %>
  </div>
</aside>
