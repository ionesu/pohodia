<%= form_with model: booking, url: bookings_path, local: false, class: 'booking', method: :post do |f| %>
  <%= f.hidden_field :tour_id %>
  <%= f.hidden_field :tour_price_item_id %>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :booking_status_id %>

  <div class="form-group">
    <label><%= I18n.t "models.booking.customer_email" %></label>
    <%= f.email_field :customer_email, autofocus: true, class: 'form-control' %>          
  </div>
  
  <div class="form-group">
    <label><%= I18n.t "models.booking.customer_phone" %></label>
    <%= f.phone_field :customer_phone, class: 'form-control' %>          
  </div>
  
  <div class="form-group">
    <label><%= I18n.t "models.booking.customer_name" %></label>
    <%= f.text_field :customer_name, class: 'form-control' %>          
  </div>
  
  <div class="form-group">
    <label><%= I18n.t "models.booking.customer_comment" %></label>
    <%= f.text_area :customer_comment, class: 'form-control' %>          
  </div>
  
  <div class="form-group">
    <label><%= I18n.t "models.booking.parties" %></label>
    <%= f.number_field :parties, class: 'form-control' %>          
  </div>
  
  
  <div class="form-group">
    <label><%= I18n.t "models.booking.terms_agree" %></label>
    <%= f.check_box :terms_agree, class: 'icheck' %>
  </div>
  
  
  <div class="form-group">
    <label><%= I18n.t "models.booking.privacy_agree" %></label>
    <%= f.check_box :privacy_agree, class: 'icheck' %>
  </div>

  <%= f.hidden_field :tour_id, value: tour.id %>

  <div class="form-group">
    <%= f.submit (I18n.t "site.bookings.submit"), class: 'btn_1 rounded full-width add_top_30' %>
    <button class="btn btn-secondary" type="button">
      <%= I18n.t "site.bookings.cancel" %>
    </button>
  </div>
<% end %>
